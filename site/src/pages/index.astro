---
import publications from "../data/publications.json";
---

<html lang="fr">
  <head>
    <meta charset="utf-8">
    <title>TriumPortal — Publications</title>
    <link rel="stylesheet" href="/TriumPortal/styles/globals.css">
  </head>
  <body>
    <h1>TriumPortal</h1>
    <p>Plateforme institutionnelle du Triumvirat.</p>

    <section>
      <h2>Publications</h2>
      <ul>
        {publications.map(pub => (
          <li>
            <strong>{pub.id}</strong> — {pub.title}<br>
            <small>{pub.publishdate} | {pub.authors?.join(", ")}</small><br>
            <a href={`/TriumPortal/publications/${pub.id}/index.html`}>Voir la publication</a>
          </li>
        ))}
      </ul>
    </section>
  </body>
</html>
